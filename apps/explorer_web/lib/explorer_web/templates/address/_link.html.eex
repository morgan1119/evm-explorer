<%= if @address do %>
  <%= link to: address_path(@conn, :show, @conn.assigns.locale, @address),
      "data-toggle": "tooltip",
      "data-placement": "top",
      title: @address do %>
    <%= @address |> hash |> String.slice(0..3) %> <i class="fas fa-ellipsis-v"></i> <%= @address |> hash |> String.slice(-4..-1) %>
  <% end %>
<% end %>
